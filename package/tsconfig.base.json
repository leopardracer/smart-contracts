{
  "compilerOptions": {
    "target": "ESNext",
    "importHelpers": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true
  },
  "include": ["./src"],
  "exclude": ["build", "db", "node_modules", "**/*.spec.ts", "**/*.test.ts", "typechain/**/*.ts"]
}
